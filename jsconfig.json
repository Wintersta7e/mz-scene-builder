{
  "compilerOptions": {
    "checkJs": true,
    "strict": false,
    "module": "commonjs",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["main.js", "preload.js", "src/**/*.js", "__tests__/**/*.js"],
  "exclude": ["node_modules", "dist", "coverage"]
}
